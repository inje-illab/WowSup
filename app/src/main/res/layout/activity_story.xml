<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StoryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#808183"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="15"
            android:gravity="bottom|left"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/story_ibtn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginBottom="11dp"
                app:srcCompat="@drawable/back_button" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="15"
            android:gravity="right"
            android:orientation="vertical">

            <com.nightonke.boommenu.BoomMenuButton
                android:id="@+id/story_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp"
                app:bmb_buttonEnum="ham"
                app:bmb_buttonPlaceEnum="buttonPlace_ham_3"
                app:bmb_normalColor="#ffffff"
                app:bmb_piecePlaceEnum="piecePlace_ham_3" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="22dp"
            android:background="@drawable/text_textbox"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/story_layout_background"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/story_text_body"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:background="#99000000"
                    android:gravity="center"
                    android:text="text"
                    android:textColor="#f0f4f4"
                    android:textSize="20sp"
                    android:fontFamily="@font/hanmaumgodic_m"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/like_block"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/story_ibtn_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="7dp"
                app:srcCompat="@drawable/unllike_icon" />

            <TextView
                android:id="@+id/story_text_cntlike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:text="0"
                android:textColor="#808183"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/story_text_tag1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:gravity="center"
                android:text="tag"
                android:fontFamily="@font/hanmaumgodic_l"/>

            <TextView
                android:id="@+id/story_text_tag2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:gravity="center"
                android:text="tag"
                android:fontFamily="@font/hanmaumgodic_l"/>

            <TextView
                android:id="@+id/story_text_tag3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:gravity="center"
                android:text="tag"
                android:fontFamily="@font/hanmaumgodic_l"/>

            <TextView
                android:id="@+id/story_text_tag4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:gravity="center"
                android:text="tag"
                android:fontFamily="@font/hanmaumgodic_l"/>

            <TextView
                android:id="@+id/story_text_tag5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:gravity="center"
                android:text="tag"
                android:fontFamily="@font/hanmaumgodic_l"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>